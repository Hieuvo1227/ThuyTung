{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": [ "node", "express" ]
  },
  "include": [ "src/**/*" ],
  "exclude": [ "node_modules", "**/*.test.ts", "**/*.tmp.tsx" ]
}